{% extends "layout.njk" %}

{% block head %}
    <title>Receitas | Foodfy</title>
    <link rel="stylesheet" href="recipes.css">
{% endblock head%}

{% block content %}

    <section class="first-cards">
        {%for item in items %}
            <div class="card-only" id="{{item.id}}">
                <img src="{{item.image}}" alt="{{item.title}}">
                <h3>{{item.title}}</h3>
                <p class="author">por
                    {{item.author}}</p>
            </div>
        {% endfor %}
    </section>

    <script src="script-recipes.js"></script>
{% endblock %}